{
    "name": "react_boilerplate",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "ajv": "^6.5.2",
        "ajv-keywords": "^3.2.0",
        "axios": "^0.18.0",
        "babel-polyfill": "^6.26.0",
        "crypto-js": "^3.1.9-1",
        "history": "^4.7.2",
        "immutable": "^3.8.2",
        "jsonwebtoken": "^8.3.0",
        "node-sass-chokidar": "^1.3.0",
        "npm-run-all": "^4.1.3",
        "pouchdb": "^7.0.0",
        "prop-types": "^15.6.2",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "react-immutable-proptypes": "^2.1.0",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.3.1",
        "react-scripts": "1.1.4",
        "redux": "^4.0.0",
        "redux-devtools-extension": "^2.13.5",
        "redux-form": "^7.4.2",
        "redux-logger": "^3.0.6",
        "redux-pouchdb-plus": "^0.11.1",
        "redux-saga": "^0.16.0",
        "reselect": "^3.0.1",
        "semantic-ui-css": "^2.3.3",
        "semantic-ui-react": "^0.82.0",
        "source-map-explorer": "^1.5.0",
        "styled-components": "^3.3.3"
    },
    "scripts": {
        "analyze": "source-map-explorer build/static/js/main.*",
        "build-css":
            "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
        "watch-css":
            "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
        "start-js": "react-scripts start",
        "start": "npm-run-all -p watch-css start-js",
        "build-js": "react-scripts build",
        "build": "npm-run-all build-css build-js && yarn run delete-maps",
        "delete-maps":
            "yarn run delete-map-files && yarn run delete-references-to-map-files",
        "delete-map-files": "find ./build -name '*.map' -delete",
        "delete-references-to-map-files":
            "find ./build -regex '.*\\.\\(js\\|css\\)' -exec sed -i -E '\\/[\\*\\/]#\\ssourceMappingURL=main(\\.[0-9a-f]+)?\\.(css|js)\\.map(\\*\\/)?/g' {} +",
        "test": "react-scripts test --env=jsdom",
        "eject": "react-scripts eject"
    }
}
